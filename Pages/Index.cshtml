@page "/blog"
@model Blog.IndexModel

<div class="container">
    <div id="blog-posts">
		@if (Model.Blogs != null && Model.Blogs.Any())
		{
			foreach (var blog in Model.Blogs)
			{
				<div class="blog-post">
					<h2><a href="./@blog.Id">@blog.Title</a></h2>
					<p>@blog.Content</p>
					<p><small>Опубликовано: @blog.PublishedDate.ToString("dd.MM.yyyy")</small></p>
				</div>
			}
		}
		else
		{
				<p>Нет доступных записей в блоге.</p>
		}
    </div>
</div>

@{
	ViewData["Title"] = "Блог";
	Layout = "_Layout";
}